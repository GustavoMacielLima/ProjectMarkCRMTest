{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "NestJS (built)",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "preLaunchTask": "npm: build",
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Process",
      "type": "pwa-node",
      "request": "attach",
      "processId": "${command:PickProcess}",
      "protocol": "inspector",
      "restart": true
    }
  ]
}
